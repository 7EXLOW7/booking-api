{
  "name": "booking-api",
  "version": "1.0.0",
  "description": "API for booking event seats",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "migrate:up": "cross-env DATABASE_URL=$(node -e \"require('./src/config/migrateConfig.ts').then(m => console.log(m.databaseUrl))\" || node -p \"require('dotenv').config(); require('./src/config/migrateConfig').databaseUrl\") node-pg-migrate up -j ts",
    "migrate:down": "cross-env DATABASE_URL=$(node -p \"require('dotenv').config(); require('./src/config/migrateConfig').databaseUrl\") node-pg-migrate down -j ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "node-pg-migrate": "^6.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
